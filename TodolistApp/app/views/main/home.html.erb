<section>
  <ul>
    <% @todos.each do |todo| %>
    <li><%=todo.content %> to do by <strong><%=todo.author %></strong></li>
    <% end %>
  </ul>
  <%= form_tag "/", method: "post" do %>
  <input type="text" name="content" placeholder="Ex: Faire les courses" />
  <input type="text" name="author" placeholder="Your name here" />
  <input type="submit" value="Ajouter" />
  <% end %>
</section>
